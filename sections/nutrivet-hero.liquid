<div class="nutrivet-hero">
  <h1>{{ section.settings.hero_title }}</h1>
  <p>{{ section.settings.hero_subtitle }}</p>
  {% if section.settings.hero_image != blank %}
    <img src="{{ section.settings.hero_image | _url }}" alt="{{ section.settings.hero_image.alt }}">
  {% endif %}
</div>

{% schema %}
{
  "name": "NutriVet Hero",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Bienvenidos a NutriVet"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Healthy pets start here"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ]
}
{% endschema %}